

<h1>All Users</h1>
<div class="jumbotron">
  <div align="center"><%= will_paginate %>

    <ul>
      <% @users.each do |u| %>
      <li class="list-group-item"><%= link_to u.username, user_path(u) %></li>
      <li class="listing"><small><%= pluralize(u.posts.count, "post") if u.posts %></small></li>
      <% if logged_in? and current_user.admin? %>
        <li class="listing"><%= link_to "Delete this user", user_path(u), method: :delete, data: {confirm: "Are you sure you want to delete this user and all their posts?"} %></li>
      <% end %>
    <% end %>
    </ul>
    <%= will_paginate %>
  </div>
</div>
