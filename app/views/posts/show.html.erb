<%= render 'layouts/navigation' %>

<div class="all-posts">
  <div>
    <%= image_tag(@post.image(:medium)) %>
  </div>
  <div>
    <%= @post.caption %>
  </div>
  <p> <%= link_to "Edit", edit_post_path %> </p>
  <p> <%= link_to "Delete", post_path(@post.id), method: :delete, data: {confirm: "Are you sure?"} %> </p>


<h2> Comments</h2>
<%= render @post.comments %>
<%= render 'comments/form' %>

</div>
